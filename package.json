{
	"name": "vardon",
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev --host",
		"build": "vite build",
		"preview": "vite preview",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"test": "playwright test",
		"test:e2e": "playwright test",
		"test:e2e:ui": "playwright test --ui",
		"test:e2e:headed": "playwright test --headed",
		"test:e2e:debug": "playwright test --debug",
		"test:e2e:report": "playwright show-report",
		"test:e2e:chrome": "playwright test --project=chromium",
		"test:e2e:firefox": "playwright test --project=firefox",
		"test:e2e:webkit": "playwright test --project=webkit",
		"test:e2e:mobile": "playwright test --project='Mobile Chrome' --project='Mobile Safari'",
		"test:e2e:visual": "playwright test visual-regression",
		"test:e2e:visual:update": "playwright test visual-regression --update-snapshots",
		"test:e2e:character": "playwright test character",
		"test:e2e:unix": "playwright test unix-filesystem",
		"test:e2e:db": "playwright test database-query",
		"test:e2e:interactions": "playwright test character-interactions",
		"test:e2e:trace": "playwright test --trace on",
		"test:e2e:video": "playwright test --video on",
		"test:cli": "node tests/working-cli-runner.js",
		"test:cli:verbose": "node run-cli-tests.js --verbose",
		"test:cli:unix": "node run-cli-tests.js unix",
		"test:cli:character": "node run-cli-tests.js character",
		"test:cli:database": "node run-cli-tests.js database",
		"test:cli:filesystem": "node run-cli-tests.js filesystem",
		"test:cli:capability": "node run-cli-tests.js capability",
		"test:cli:plugin": "node run-cli-tests.js plugin",
		"test:cli:performance": "node run-cli-tests.js performance",
		"test:cli:integration": "node run-cli-tests.js integration",
		"test:unit": "node src/lib/domain/tests/TestRunner.ts",
		"test:unit:unix": "node src/lib/domain/tests/UnixArchitectureTest.ts",
		"test:unit:character": "node src/lib/domain/tests/CharacterTests.ts",
		"test:unit:invariants": "node src/lib/domain/tests/InvariantCheckingTest.ts",
		"test:all": "npm run test:cli && npm run test:e2e",
		"test:install": "playwright install",
		"test:codegen": "playwright codegen http://localhost:5173",
		"env:status": "node scripts/switch-env.js status",
		"env:local": "node scripts/switch-env.js local",
		"env:prod": "node scripts/switch-env.js prod",
		"yaml:split": "python yaml-tools/core/advanced_yaml_splitter.py data/pathfinder_data.yaml data/split",
		"yaml:combine": "python yaml-tools/core/advanced_yaml_combiner.py data/split data/pathfinder_data.yaml",
		"yaml:load": "python3 scripts/load_yaml_to_db.py",
		"yaml:pipeline": "node yaml-tools/core/yaml_pipeline.js",
		"types:generate": "node scripts/generate_types.js"
	},
	"devDependencies": {
		"@internationalized/date": "^3.6.0",
		"@playwright/test": "^1.52.0",
		"@stylistic/eslint-plugin": "^1.5.1",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/kit": "^2.7.4",
		"@sveltejs/vite-plugin-svelte": "^4.0.0",
		"@tailwindcss/typography": "^0.5.15",
		"@types/eslint": "^9.6.0",
		"@types/lodash": "^4.17.16",
		"@types/node": "^22.8.6",
		"autoprefixer": "^10.4.20",
		"bits-ui": "^1.3.0",
		"clsx": "^2.1.1",
		"embla-carousel-svelte": "^8.5.1",
		"esbuild": "^0.25.1",
		"eslint": "^8.57.1",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.45.1",
		"formsnap": "^1.0.1",
		"globals": "^15.0.0",
		"lucide-svelte": "^0.469.0",
		"mode-watcher": "^0.5.0",
		"paneforge": "^0.0.6",
		"prettier": "^3.3.2",
		"prettier-plugin-svelte": "^3.2.xw6",
		"prettier-plugin-tailwindcss": "^0.6.5",
		"shadcn-svelte": "^0.14.0",
		"svelte": "^5.11.0",
		"svelte-check": "^4.0.7",
		"svelte-sonner": "^0.3.28",
		"sveltekit-superforms": "^2.22.1",
		"tailwind-merge": "^2.6.0",
		"tailwind-variants": "^0.3.0",
		"tailwindcss": "^3.4.9",
		"tailwindcss-animate": "^1.0.7",
		"ts-node": "^10.9.2",
		"typescript": "^5.8.2",
		"vite": "^5.4.4",
		"zod": "^3.24.1"
	},
	"dependencies": {
		"@radix-ui/react-accordion": "^1.2.2",
		"@radix-ui/react-alert-dialog": "^1.1.4",
		"@radix-ui/react-aspect-ratio": "^1.1.1",
		"@radix-ui/react-avatar": "^1.1.2",
		"@radix-ui/react-slot": "^1.1.1",
		"@supabase/supabase-js": "^2.46.1",
		"csstype": "^3.1.3",
		"glob": "^11.0.2",
		"js-yaml": "^4.1.0",
		"lodash": "^4.17.21",
		"shadcn-ui": "^0.9.4",
		"svelte-gestures": "^5.1.3"
	}
}
